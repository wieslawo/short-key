<Window 
       
        x:Class="WpfAppShortCut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppShortCut"
        mc:Ignorable="d"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
        Title="MainWindow" Height="80" Width="400" MouseDown="Window_MouseDown" MouseDoubleClick="MainWindow_OnMouseDoubleClick">
    <Grid>
        <Border BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="10"
                Background="MediumSlateBlue">
        </Border>
        <TextBox Height="40" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="400"  >
        </TextBox>
    </Grid>
</Window>
